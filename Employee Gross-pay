#include <iostream>
using namespace std;
int main() {
int hours1, hours2, hours3;
double PayRate1, PayRate2, PayRate3;

cout << "Enter the number of hours worked for the first employee = ";
cin >> hours1;
cout << "Enter hourly rate of the worker = ";
cin >> PayRate1;
if (hours1 <= 40) {
cout << "Salary is $" << hours1 * PayRate1 << endl;
}
else {
cout << "Salary is $" << (40 * PayRate1) + ((hours1 - 40) * PayRate1 * 1.5) <<
endl;
}
cout << "Enter the number of hours worked for the second employee = ";
cin >> hours2;
cout << "Enter hourly rate of the worker = ";

cin >> PayRate2;
if (hours2 <= 40) {
cout << "Salary is $" << hours2 * PayRate2 << endl;
}
else {
cout << "Salary is $" << (40 * PayRate2) + ((hours2 - 40) * PayRate1 * 1.5) <<
endl;
}
cout << "Enter the number of hours worked for the third employee = ";
cin >> hours3;
cout << "Enter hourly rate of the worker = ";
cin >> PayRate3;
if (hours3 <= 40) {
cout << "Salary is $" << hours3 * PayRate3 << endl;
}
else {
cout << "Salary is $" << (40 * PayRate3) + ((hours3 - 40) * PayRate1 * 1.5) <<
endl;
}
cout << "\n\nProgram END.";
return 0;
}
