#include <iostream>
using namespace std;

int main() {
    int num, sum = 0;
    cout << "To exit enter a negative number\n\n";
    cout << "Enter a number: ";
    cin >> num;

    while (num >= 0) {
        sum += num;

        cout << "Enter a number: ";
        cin >> num;
        
    }
    cout << "Sum of all entered numbers is = " << sum << endl;
    return 0;
}
