#include <iostream>
using namespace std;
int main()
{
	int num, limitation, repeat;
	
	do {
		int i = 1;
		cout << "Write the number of whose table you want : ";
		cin >> num;

		cout << "Enter the value to which you want to find the table of " << num << ": ";
		cin >> limitation;

		do {
			cout << num << " * " << i << " = " << num * i << endl;
			i++;
		} while (limitation >= i);
		cout << "Enter 1 for Yes and any other for No \n";
		cout << "Do you wish to find the table of another number\n";
		cin >> repeat;
	} while (repeat == 1);
	return 0;
}
